{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-extra-parens": "error",
    "no-unexpected-multiline": "error",
    "curly": "error",
    "default-case": "warn",
    "default-case-last": "warn",
    "eqeqeq": "error",
    "guard-for-in": "warn",
    "no-alert": "error",
    "no-eval": "error",
    "no-constructor-return": "error",
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-magic-numbers": "warn",
    "array-bracket-newline": [
      "warn",
      "consistent"
    ],
    "brace-style": "error",
    "camelcase": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "indent": "error",
    "key-spacing": [
      "error",
      {
        "afterColon": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "ignoreComments": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "object-curly-newline": [
      "error"
    ],
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "no-useless-constructor": "error"
  }
}